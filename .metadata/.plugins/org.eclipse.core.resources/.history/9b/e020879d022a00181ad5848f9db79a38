import java.util.Scanner;
import java.util.Arrays;
public class BUYING2 {
	
	public static void main(String[] args){
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		while(t-->0){
			int n = sc.nextInt();
			int x = sc.nextInt();
			int A[] = new int[n];
			for(int i =0;i<n;i++){
				A[i] = sc.nextInt();
			}
			
			Arrays.sort(A);
			int m = A[0];
			int sum = 0;
			for(int i = 0;i<n;i++){
				sum += A[i];
				
			}
			if(sum<x){
				System.out.println("-1\n");
			}
			else{
				int k = sum/x;
				int r = sum%x;
				if(r>=m){
					System.out.println("-1\n");
					
				}
				else{
					System.out.println(k+"\n");
				}
					
			}
					
		}
	}

}
